<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_marginBottom="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
   app:cardElevation="8dp"
    app:cardCornerRadius="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#05248B"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:padding="6dp"
        android:textSize="16sp"
        android:text="Pakistan Super League T20"
        android:id="@+id/pakistanleague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_share"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    </RelativeLayout>

    <View
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/vs"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kolkata knigt Riders vs Trinbago Knight Riders" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">


    <LinearLayout
        android:padding="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kkrimage"
            android:src="@drawable/kkr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:text="KKR"
            android:id="@+id/kkrtext"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:padding="4dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trinbagoimage"
            android:src="@drawable/trinbago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:text="TKR"
            android:id="@+id/trinbagotext"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:text="Tue,6May"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="12dp"
            android:background="@android:color/white"
            android:layout_width="1dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:text="12 Pm"
            android:id="@+id/timekkr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="6dp">

        <TextView
            android:gravity="center"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:text="Point Table"
            android:id="@+id/pointtable"
            android:layout_width="200dp"
            android:layout_height="50dp" />

        <TextView
            android:gravity="center"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:background="#FFA200"
            android:text="View Match"
            android:id="@+id/viewmatchinfo"
            android:layout_width="match_parent"
            android:layout_height="50dp" />





    </LinearLayout>




</LinearLayout>


</androidx.cardview.widget.CardView>