<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#05248B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CricketFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:fontFamily="@font/loto_regular"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Featured Matches" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featuredmatch"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="@font/loto_regular"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Live Matches" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/livematch"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/subscription"
            android:layout_width="match_parent"
            android:layout_height="50dp" />



        <RelativeLayout
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/loto_regular"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tranding" />

    <TextView
        android:textColor="#FFA200"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:fontFamily="@font/loto_regular"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View all" />

</RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trandring"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
android:fontFamily="@font/loto_regular"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News" />



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="30dp"
            android:id="@+id/news"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"></TextView>












    </LinearLayout>



</ScrollView>