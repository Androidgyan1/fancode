<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#05248B"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/L1"
        android:background="@drawable/gold_bacground"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/over"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Over"></TextView>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/over_text"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44"></TextView>


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/L2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/L1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/count_ball"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010000" />

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/run_text"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Runs"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/L2"
        android:layout_width="1dp"
        android:layout_height="50dp"></View>
<RelativeLayout
    android:id="@+id/rel_view"
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@id/L2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/L3"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/ket"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KET"></TextView>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/ket_text"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="138/2"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/L3"
        android:layout_width="1dp"
        android:layout_height="50dp"></View>

</RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@id/rel_view"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/L4"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/Tom_name"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tom"></TextView>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tom_over"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-0-o-1"></TextView>

        </LinearLayout>


    </RelativeLayout>





</RelativeLayout>