<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#05248B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreFragment">

    <RelativeLayout
        android:background="#F4F6F7"
        android:id="@+id/re1score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/batsmen"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="BATSMEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>


    <RelativeLayout
        android:gravity="center"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/r"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/b"
            android:layout_toRightOf="@id/r"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/s4"
            android:layout_toRightOf="@id/b"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="4s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/s6"
            android:layout_toRightOf="@id/s4"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="6s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/sr"
            android:layout_toRightOf="@id/s6"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="S/R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/re1score"
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>