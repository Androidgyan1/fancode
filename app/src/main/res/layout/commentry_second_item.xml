<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#05248B"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/second_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/recommentry"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/over_commentry"
            android:textSize="18sp"
            android:text="43.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/over_commentry"
            android:id="@+id/over_run"
            android:textSize="18sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_toRightOf="@id/recommentry"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="6dp"
            android:text="Match"
            android:id="@+id/commentry_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>



        <TextView
            android:layout_below="@id/commentry_match"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="6dp"
            android:text="Match"
            android:id="@+id/commentry_matchsummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>







    </RelativeLayout>

</RelativeLayout>

    <View
        android:background="@android:color/white"
        android:layout_marginTop="2dp"
        android:layout_below="@id/second_rel"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

</RelativeLayout>