<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#05248B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subscripation">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#051E6E"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:onClick="subback"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_left_arrow__2_"
                android:layout_width="20dp"
                android:layout_height="20dp"></ImageView>


            <TextView
                android:textColor="@android:color/white"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Suscripation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>


        <TextView
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16dp"
            android:text="Subscribe to get more out of VSportZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <RelativeLayout
            android:layout_marginRight="6dp"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <TextView
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:id="@+id/gold_text"
                android:textAlignment="center"
                android:background="@drawable/gold_bacground"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="Gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/sliver_text"
                android:layout_toRightOf="@id/gold_text"
                android:textAlignment="center"
                android:background="@drawable/sliver_background"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                android:text="Sliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:id="@+id/bronze_text"
                android:layout_toRightOf="@id/sliver_text"
                android:textAlignment="center"
                android:background="@drawable/bronze_text"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:text="Bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

       <RelativeLayout
           android:padding="4dp"
           android:id="@+id/rel1"
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/unlimated_sport"
               android:layout_marginLeft="5dp"
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:textSize="14dp"
               android:text="Unlimated Live Sport"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></TextView>

           <ImageView
               android:id="@+id/gold_check"
               android:layout_marginLeft="40dp"
               android:layout_toRightOf="@id/unlimated_sport"
               android:src="@drawable/ic_check__1_"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></ImageView>


           <ImageView
               android:id="@+id/sliver_check"
               android:layout_marginLeft="40dp"
               android:layout_toRightOf="@id/gold_check"
               android:src="@drawable/ic_check__1_"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></ImageView>


           <ImageView
               android:id="@+id/bronze_check"
               android:layout_marginLeft="50dp"
               android:layout_toRightOf="@id/sliver_check"
               android:src="@drawable/ic_check__1_"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"></ImageView>

       </RelativeLayout>

<View
    android:background="#ECF0F1"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"></View>

        <RelativeLayout
            android:padding="4dp"
            android:id="@+id/rel2"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Addfreeentirment"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Add Free Enterniment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:id="@+id/add_check"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/Addfreeentirment"
                android:src="@drawable/ic_check__1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>


            <ImageView
                android:id="@+id/add_sliver_check"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/add_check"
                android:src="@drawable/ic_check__1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>


            <ImageView
                android:id="@+id/add_bronze_check"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/add_sliver_check"
                android:src="@drawable/ic_check__1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

        </RelativeLayout>

        <View
            android:background="#ECF0F1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <RelativeLayout
            android:padding="6dp"
            android:id="@+id/rel3"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Screenwatch"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Screens you watch\non"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textColor="@android:color/white"
                android:text="1"
                android:id="@+id/screen_check"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/Screenwatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:textColor="@android:color/white"
                android:text="2"
                android:id="@+id/screen_sliver_check"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@id/screen_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:textColor="@android:color/white"
                android:text="3"
                android:id="@+id/screen_bronze_check"
                android:layout_marginLeft="64dp"
                android:layout_toRightOf="@id/screen_sliver_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

        <View
            android:background="#ECF0F1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>


        <RelativeLayout
            android:padding="6dp"
            android:id="@+id/rel4"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/video_quality"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Video Quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textColor="@android:color/white"
                android:text="SD"
                android:id="@+id/video_check"
                android:layout_marginLeft="84dp"
                android:layout_toRightOf="@id/video_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:textColor="@android:color/white"
                android:text="HD"
                android:id="@+id/video_sliver_check"
                android:layout_marginLeft="54dp"
                android:layout_toRightOf="@id/video_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:textColor="@android:color/white"
                android:text="4K"
                android:id="@+id/quality_bronze_check"
                android:layout_marginLeft="54dp"
                android:layout_toRightOf="@id/video_sliver_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

        <View
            android:background="#ECF0F1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>


        <RelativeLayout
            android:padding="6dp"
            android:id="@+id/rel5"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/audio_quality"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Audio Quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textColor="@android:color/white"
                android:text="Stereo"
                android:id="@+id/audio_check"
                android:layout_marginLeft="56dp"
                android:layout_toRightOf="@id/audio_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:textColor="@android:color/white"
                android:text="Dolbey"
                android:id="@+id/audio_sliver_check"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/audio_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


            <TextView
                android:textColor="@android:color/white"
                android:text="Dolbey\n5.1"
                android:id="@+id/audio_bronze_check"
                android:layout_marginLeft="42dp"
                android:layout_toRightOf="@id/audio_sliver_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

        <View
            android:background="#ECF0F1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>



        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:padding="6dp"
                android:background="@drawable/grid_item_border"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:padding="3dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/gold_bacground"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold"></TextView>


                <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹   1499/year"></TextView>
            </LinearLayout>

            <LinearLayout
                android:padding="6dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/grid_item_border"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/sliver_background"
                    android:padding="3dp"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sliver"></TextView>


                <TextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹  399/year"></TextView>
            </LinearLayout>


            <LinearLayout
                android:padding="6dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/grid_item_border"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:background="@drawable/bronze_text"
                    android:padding="3dp"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bronze"></TextView>


                <TextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹   299/year"></TextView>
            </LinearLayout>


        </LinearLayout>




<Button
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="#051E6E"
    android:text="Continue"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></Button>

    </LinearLayout>











</ScrollView>